    # LAUNCH_SINC_PUPPET="no": Don't boot sinc_puppet before do pkgsync
    # LAUNCH_SINC_PUPPET="yes": Launch sinc_puppet before do pkgsync (default option)
    LAUNCH_SINC_PUPPET="yes"

