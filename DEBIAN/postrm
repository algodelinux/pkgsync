#!/bin/bash
set -e

USERID="pkgsync"

[ -x /bin/systemctl ] && systemctl is-active getty@tty12.service 2>&1>/dev/null && systemctl stop getty@tty12.service; systemctl is-enabled getty@tty12.service 2>&1>/dev/null && systemctl disable getty@tty12.service; systemctl daemon-reload

pkill -u $USERID; deluser --quiet --system $USERID

[ -d /var/home/pkgsync ] || rm -r /var/home/pkgsync

exit 0
