#!/bin/bash
set -e

USERID="pkgsync"

pidof systemd 2>&1>/dev/null

if [ $? -eq "0" ]; then
   systemctl is-active getty@tty12.service 2>&1>/dev/null && systemctl stop getty@tty12.service
   systemctl is-enabled getty@tty12.service 2>&1>/dev/null && systemctl disable getty@tty12.service
   systemctl daemon-reload
fi

if id -nG "$USERID" | grep -qw "sudo"; then
  echo "El usuario $username es miembro del grupo sudo. Elimin√°ndolo..."
  deluser "$USERID" sudo
else
  echo "El usuario $username no es miembro del grupo sudo."
fi

deluser --quiet --system $USERID

exit 0
